{
    "name": "finxact-json-schema",
    "displayName": "Finxact json schema formatter",
    "description": "Format json files using Finxact JSON schema",
    "version": "2.0.0",
    "publisher": "andrewgarber",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:json",
        "onCommand:extension.finxactFormat"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.finxactFormat",
                "title": "Finxact JSON Schema"
            }
        ],
        "keybindings": [
			{
				"command": "extension.finxactFormat",
				"key": "ctrl+alt+p",
				"mac": "cmd+alt+p"
			}
        ],
        "menus": {
            "editor/context": [{
                "when": "resourceLangId == json",
                "command": "extension.finxactFormat",
                "group": "navigation"
            }]
        },
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/json.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}