{
    "name": "finxact-json-schema",
    "displayName": "Finxact json formatter",
    "description": "Format json files using Finxact schema",
    "version": "1.0.0",
    "publisher": "andrewgarber",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:json",
        "onCommand:extension.finxactFormat"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.finxactFormat",
                "title": "Finxact JSON Format"
            }
        ],
        "keybindings": [
            {
                "command": "extension.finxactFormat",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p"
            },
            {
                "command": "extension.finxactQuickFormat",
                "key": "shift+enter",
                "mac": "shift+enter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == json",
                    "command": "extension.finxactFormat",
                    "group": "navigation"
                }
            ]
        },
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/fin-snippets.json"
            }
        ]
    },
    "grammars": [
        {
            "language": "jsont",
            "scopeName": "text.html.jsont",
            "path": "./syntaxes/jsont.tmLanguage"
        }
    ],
    "jsonValidation": [
        {
            "fileMatch": ".json",
            "url": "http://json.schemastore.org/jshintrc"
        }
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "ajv": "^6.5.3",
        "finxact-json": "git+https://github.com/n-genesis/finxact-json.git"
    }
}