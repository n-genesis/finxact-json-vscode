{
    "name": "finxact-json-schema",
    "displayName": "Finxact json schema formatter",
    "description": "Format json files using Finxact JSON schema",
    "version": "1.0.0",
    "publisher": "andrewgarber",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:json",
        "onCommand:extension.finxactFormat",
        "onCommand:extension.finxactValidate",
        "onCommand:extension.finxactJSONTemplate"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
			"type": "object",
			"title": "Finxact Templates Configuration",
			"properties": {
				"finxactTemplates.Author": {
					"type": "string",
					"default": "Author",
					"description": "Author of the file"
				}
			}
		},
        "commands": [
            {
                "command": "extension.finxactFormat",
                "title": "Finxact JSON Format"
            },
            {
                "command": "extension.finValidate",
                "title": "Finxact shcema validation"
            },
            {
                "command": "extension.finxactJSONTemplate",
                "title": "New JSON File (Finxact)"
            }
        ],
        "keybindings": [
            {
                "command": "extension.finxactFormat",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p"
            },
            {
                "command": "extension.finxactQuickFormat",
                "key": "shift+enter",
                "mac": "shift+enter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == json",
                    "command": "extension.finxactFormat",
                    "group": "format"
                }
            ],
            "explorer/context": [
				{
					"command": "extension.finxactJSONTemplate",
					"group": "format"
                }
			]
        },
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/fin-snippets.json"
            }
        ]
    },
    "grammars": [
        {
            "language": "jsont",
            "scopeName": "text.html.jsont",
            "path": "./syntaxes/jsont.tmLanguage"
        }
    ],
    "jsonValidation": [
        {
            "fileMatch": ".json",
            "url": "http://json.schemastore.org/jshintrc"
        }
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
